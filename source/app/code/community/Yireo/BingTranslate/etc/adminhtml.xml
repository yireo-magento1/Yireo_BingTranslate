<config>
    <translate>
        <modules>
            <Yireo_BingTranslate>
                <files>
                    <default>Yireo_BingTranslate.csv</default>
                </files>
            </Yireo_BingTranslate>
        </modules>
    </translate>

    <acl>
        <resources>
            <admin>
                <children>
                    <catalog>
                        <children>
                            <bingtranslate translate="title" module="bingtranslate">
                                <title>Translate via BingTranslate</title>
                            </bingtranslate>
                        </children>
                    </catalog>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <bingtranslate translate="title" module="bingtranslate">
                                        <title>BingTranslate Section</title>
                                    </bingtranslate>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
</config>
